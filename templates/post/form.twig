{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block index %}active{% endblock %}

{% block body %}

    <main role="main">
        <div class="container mt-3">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="text-success text-center">{{ message }}</div>
                    <div class="text-danger text-center">{{ error }}</div>
                    <form action="postAdvance" method="post">
                        <div class="form-group">
                            <label class="small mb-1" for="inputTitle">Titre</label>
                            <input class="form-control py-4" id="inputTitle" name="inputTitle" type="text"
                                    value="{{ post.title }}"/>
                        </div>
                        <div class="form-group">
                            <label class="small mb-1" for="inputChapo">Chapo</label>
                            <input class="form-control py-4" id="inputChapo" name="inputChapo" type="text"
                                   value="{{ post.chapo }}"/>
                        </div>
                        <div class="form-group">
                            <label class="small mb-1" for="inputContent">Contenu</label>
                            <input class="form-control py-4" id="inputContent" name="inputContent" type="text"
                                   value="{{ post.content }}"/>
                        </div>
                        <input type="hidden" name="id" value="{{ post.id }}" />
                        <button type="submit" class="btn btn-primary">Valider</button>
                    </form>
                </div>
            </div>
        </div>
    </main>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}